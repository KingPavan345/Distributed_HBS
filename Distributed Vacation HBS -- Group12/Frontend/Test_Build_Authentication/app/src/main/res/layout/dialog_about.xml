<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/about_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About This Project"
            android:textColor="#222222"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/about_project"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Distributed Vacation Home Booking System\nProgramming Distributed Systems Project Summer Term 2025"
            android:textColor="#444444"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/about_team_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Group 12:"
            android:textColor="#222222"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/about_team"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Team Lead: Pavan Sai Kappiri\nMohammad Shajadul Karim\nShahinur Rahman\nMohammed Wafiul Abire Aonkon"
            android:textColor="#444444"
            android:textSize="15sp"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/about_tasks_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tasks:"
            android:textColor="#222222"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/about_tasks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. Android Smartphone App Client - Pavan Sai Kappiri\n2. CLI Tool For Admins - Mohammad Shajadul Karim\n3. Authentication Microservice - Shahinur Rahman\n4. Vacation Home Listings Microservice - Mohammed Wafiul Abire Aonkon"
            android:textColor="#444444"
            android:textSize="15sp" />
    </LinearLayout>

</androidx.cardview.widget.CardView> 